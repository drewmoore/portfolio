  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        .row
          .small-12.columns.main-content
            .row
              .window.small-12.columns
                .row.header
                  .heading-board
                    h1 Drew Moore
                    h5 Web Developer
                .row.body
                  .columns.side-panel
                    - var menuItems = ['Sites', 'Resume', 'Contact'];
                    - var menuLinks = ['/', '/resume', '/contact']
