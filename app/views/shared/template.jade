doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row.full-height
      .small-12.columns.main-content
        .row.full-width.full-height
          .window.small-12.columns
            .row.header
              .heading-board
                h1 Andrew Moore
                h5 Web Developer
            .row.body
              .side-panel
                ul
                  - var menuItems = ['Sites', 'Resume', 'Contact'];
                  - var menuLinks = ['/', '/resume', '/contact']
                  - for(var i=0; i < menuItems.length; ++i) {
                    li.menu-links
                      a(href=menuLinks[i])
                        strong= menuItems[i]
                  - }
              block content

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.min.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')
