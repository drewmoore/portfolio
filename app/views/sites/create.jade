extends ../shared/template

block content

  .row
    .small-2.columns
      &nbsp;
    .small-8.columns
      if err
        .row
          .small-12.columns
              p #{err}
    .small-2.columns

  .row
    .small-12.columns
      .row
        .small-12.columns
          form(action='/sites/create', method='post', enctype='multipart/form-data')
            fieldset
              legend Add a Site
                label Title
                input(name='title', type='text', value='title it...')
                label Description
                input(name='description', type='textbox', value='describe it...')
                label Site URL
                input(name='url', type='text', value='http://')
                label Github URL
                input(name='github', type='text', value='https://github.com/drewmoore/')
                label Upload a Screenshot
                input(name='imageFile', type='file')
                button Add the Site, yo!
