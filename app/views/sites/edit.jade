extends ../shared/template-admin

block content
  .row
    .small-12.columns
        form(action='/sites/update/' + site._id.toString(), method='post', enctype='multipart/form-data')
          fieldset
            legend Edit Sample Model
              label Title
              input(name='title', type='text', value=site.title)
              label Description
              input(name='description', type='textbox', value=site.description)
              label Site URL
              input(name='url', type='text', value=site.url)
              label Github URL
              input(name='github', type='text', value=site.github)
              label Framework
              input(name='framework', type='text', value=site.framework)
              label Host
              input(name='host', type='text', value=site.host)
              label Priority: 1 highest, 5 lowest
              select(name='priority', value=site.priority)
                - for (var i = 1; i <= 5; ++i) {
                  - if(i === parseInt(site.priority)) {
                    option(value=i, selected=true) #{i}
                  - } else {
                    option(value=i) #{i}
                  - }
                - }
              label Change Screenshot
              input(name='imageFile', type='file')
              input(name='userId', type='hidden', value=site.userId)
              input(name='id', type='hidden', value=site._id.toString())
              button Update

